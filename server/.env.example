# Hytale Server Manager - Server Configuration
# Copy this file to .env and configure required values

# ===========================================
# REQUIRED - Server will not start without these
# ===========================================

# JWT secrets for authentication (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=
JWT_REFRESH_SECRET=

# Encryption key for sensitive settings (exactly 32 characters)
SETTINGS_ENCRYPTION_KEY=

# ===========================================
# Server Configuration
# ===========================================

NODE_ENV=development
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173

# ===========================================
# Database
# ===========================================

DATABASE_URL="file:./data/hytalepanel.db"

# ===========================================
# Paths
# ===========================================

# Base path for server installations
SERVERS_BASE_PATH=./servers

# Base path for backups
BACKUPS_BASE_PATH=./backups

# Logs directory
LOGS_PATH=./logs

# ===========================================
# Logging
# ===========================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# ===========================================
# JWT Settings
# ===========================================

# Access token expiration (default: 15m)
JWT_EXPIRES_IN=15m

# ===========================================
# WebSocket
# ===========================================

WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# ===========================================
# Discord Notifications (optional)
# ===========================================

DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=Hytale Server Manager
DISCORD_AVATAR_URL=
DISCORD_MENTION_ROLE_ID=

# ===========================================
# FTP Remote Backup Storage (optional)
# ===========================================

FTP_ENABLED=false
FTP_HOST=
FTP_PORT=21
FTP_USERNAME=
FTP_PASSWORD=
FTP_SECURE=false
