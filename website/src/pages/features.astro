---
import BaseLayout from '../layouts/BaseLayout.astro';
import FeatureCard from '../components/ui/FeatureCard.astro';
import Button from '../components/ui/Button.astro';

const allFeatures = [
  {
    icon: 'activity',
    title: 'Real-time Server Monitoring',
    description: 'Live metrics via WebSockets. Track CPU usage, memory consumption, TPS, and player counts with auto-refreshing dashboards that update every 5 seconds.',
  },
  {
    icon: 'network',
    title: 'Network Organization',
    description: 'Group multiple servers into logical networks. Monitor and control entire clusters from a unified interface. Perfect for server networks with multiple game modes.',
  },
  {
    icon: 'package',
    title: 'Modtale Marketplace Integration',
    description: 'Browse and install mods directly from Modtale. One-click installation with automatic updates and version management.',
  },
  {
    icon: 'database',
    title: 'Backups',
    description: 'Full and incremental backups with compression. One-click restore to any previous state.',
  },
  {
    icon: 'clock',
    title: 'Task Automation',
    description: 'Automate server restarts, backups, announcements, and custom commands. Flexible cron scheduling with preset options for common intervals.',
  },
  {
    icon: 'terminal',
    title: 'Live Console',
    description: 'Full-featured web console with real-time output. Execute commands, view color-coded logs, and download history. Supports multiple concurrent sessions.',
  },
  // {
  //   icon: 'chart',
  //   title: 'Analytics & Reports',
  //   description: 'Comprehensive analytics dashboard with performance metrics. Track player engagement, retention rates, peak hours, and resource utilization.',
  // },
  {
    icon: 'shield',
    title: 'Role-Based Access Control',
    description: 'Granular permission system with custom roles. Admin, Moderator, and Viewer presets with ability to create custom permission sets.',
  },
  // {
  //   icon: 'smartphone',
  //   title: 'Mobile Responsive',
  //   description: 'Full-featured responsive design that works on any device. Manage your servers from your phone, tablet, or desktop with the same powerful interface.',
  // },
];
---

<BaseLayout
  title="Features"
  description="Explore all the features of Hytale Server Manager. Real-time monitoring, mod marketplace, automated backups, and more."
>
  <!-- Hero -->
  <section class="relative overflow-hidden py-16 md:py-24">
    <div class="absolute inset-0 hero-gradient"></div>
    <div class="absolute inset-0 bg-grid-pattern opacity-50"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-heading font-bold mb-6">
        <span class="text-text-light-primary dark:text-text-primary">Powerful Features for</span>
        <br />
        <span class="text-gradient">Self-Hosted Server Management</span>
      </h1>
      <p class="text-lg text-text-light-muted dark:text-text-muted max-w-2xl mx-auto">
        Everything you need to run, monitor, and scale your Hytale servers.
        Built by server admins, for server admins.
      </p>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="section-padding bg-primary-light-bg dark:bg-primary-bg">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allFeatures.map((feature) => (
          <FeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Tech Stack -->
  <section class="section-padding bg-primary-light-bg-secondary dark:bg-primary-bg-secondary">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-heading font-bold text-text-light-primary dark:text-text-primary mb-4">
          Built with know and easy to work with tech stack
        </h2>
