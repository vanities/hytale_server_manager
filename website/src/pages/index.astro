---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import FeatureGrid from '../components/home/FeatureGrid.astro';
import CTASection from '../components/home/CTASection.astro';
---

<BaseLayout title="Home">
  <Hero />
  <FeatureGrid />

  <!-- Additional Features Section -->
  <section class="section-padding bg-primary-light-bg-secondary dark:bg-primary-bg-secondary">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-heading font-bold text-text-light-primary dark:text-text-primary mb-6">
            More Than Just a
            <span class="text-gradient">Control Panel</span>
          </h2>
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-accent-primary">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-1">Player Management</h3>
                <p class="text-text-light-muted dark:text-text-muted">Track player activity, manage bans and kicks, and moderate your community with built-in tools.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-accent-primary">
                  <path d="M3 3v16a2 2 0 0 0 2 2h16"/>
                  <path d="m19 9-5 5-4-4-3 3"/>
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-1">Analytics & Reports</h3>
                <p class="text-text-light-muted dark:text-text-muted">Gain insights into server performance, player engagement, and resource utilization with detailed analytics.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-accent-primary">
                  <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/>
                  <path d="m9 12 2 2 4-4"/>
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-1">Role-Based Access</h3>
                <p class="text-text-light-muted dark:text-text-muted">Define custom roles with granular permissions. Give your team the access they need, nothing more.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-accent-primary">
                  <rect width="14" height="20" x="5" y="2" rx="2" ry="2"/>
                  <path d="M12 18h.01"/>
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-1">Mobile Responsive</h3>
                <p class="text-text-light-muted dark:text-text-muted">Manage your servers from anywhere. Full-featured dashboard that works on phones, tablets, and desktops.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="rounded-xl overflow-hidden border border-gray-200 dark:border-gray-800 shadow-2xl">
            <img
              src="/hytale_server_manager/images/dashboard.jpeg"
              alt="Hytale Server Manager Dashboard"
              width="2428"
              height="1250"
              class="w-full h-auto"
            />
          </div>
          <!-- Decorative glow -->
          <div class="absolute -inset-4 bg-accent-primary/10 rounded-xl blur-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <CTASection />
</BaseLayout>
