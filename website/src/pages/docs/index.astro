---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const sections = [
  {
    title: 'Getting Started',
    description: 'Learn how to install, configure, and get up and running with Hytale Server Manager.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>`,
    links: [
      { href: '/hytale_server_manager/docs/getting-started/installation', label: 'Installation' },
      { href: '/hytale_server_manager/docs/getting-started/quick-start', label: 'Quick Start' },
      { href: '/hytale_server_manager/docs/getting-started/configuration', label: 'Configuration' },
    ],
  },
  {
    title: 'Features',
    description: 'Detailed documentation for each feature of the server management panel.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22V12"/></svg>`,
    links: [
      { href: '/hytale_server_manager/docs/features/server-management', label: 'Server Management' },
      { href: '/hytale_server_manager/docs/features/mod-marketplace', label: 'Mod Marketplace' },
      { href: '/hytale_server_manager/docs/features/backups', label: 'Backups' },
      { href: '/hytale_server_manager/docs/features/automation', label: 'Automation' },
    ],
  },
  {
    title: 'Guides',
    description: 'Step-by-step tutorials for common tasks and advanced configurations.',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>`,
    links: [
      { href: '/hytale_server_manager/docs/guides/first-server', label: 'Your First Server' },
      { href: '/hytale_server_manager/docs/guides/installing-mods', label: 'Installing Mods' },
    ],
  },
];
---

<BaseLayout
  title="Documentation"
  description="Complete documentation for Hytale Server Manager. Installation guides, feature documentation, and tutorials."
>
  <!-- Hero -->
  <section class="relative overflow-hidden py-16 md:py-24">
    <div class="absolute inset-0 hero-gradient"></div>
    <div class="absolute inset-0 bg-grid-pattern opacity-50"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-heading font-bold mb-6">
        <span class="text-text-light-primary dark:text-text-primary">Documentation</span>
      </h1>
      <p class="text-lg text-text-light-muted dark:text-text-muted max-w-2xl mx-auto mb-8">
        Everything you need to install, configure, and master Hytale Server Manager.
      </p>
      <Button href="/hytale_server_manager/docs/getting-started/installation">
        Get Started
      </Button>
    </div>
  </section>

  <!-- Sections -->
  <section class="section-padding bg-primary-light-bg dark:bg-primary-bg">
    <div class="max-w-7xl mx-auto container-padding">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {sections.map((section) => (
          <Card variant="glass" class="p-6">
            <div class="w-12 h-12 rounded-lg bg-accent-primary/10 flex items-center justify-center mb-4 text-accent-primary">
              <Fragment set:html={section.icon} />
            </div>
            <h2 class="text-xl font-heading font-semibold text-text-light-primary dark:text-text-primary mb-2">
              {section.title}
            </h2>
            <p class="text-sm text-text-light-muted dark:text-text-muted mb-4">
              {section.description}
            </p>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="flex items-center gap-2 text-sm text-accent-primary hover:text-accent-secondary transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="w-4 h-4"
                    >
                      <path d="M5 12h14" />
                      <path d="m12 5 7 7-7 7" />
                    </svg>
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </Card>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
