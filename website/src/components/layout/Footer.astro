---
const currentYear = new Date().getFullYear();

const links = {
  product: [
    { href: '/hytale_server_manager/features', label: 'Features' },
    { href: 'https://github.com/nebula-codes/hytale_server_manager/releases', label: 'Releases', external: true },
  ],
  docs: [
    { href: '/hytale_server_manager/docs/getting-started/installation', label: 'Installation' },
    { href: '/hytale_server_manager/docs/getting-started/quick-start', label: 'Quick Start' },
    { href: '/hytale_server_manager/docs/features/server-management', label: 'Server Management' },
  ],
  community: [
    { href: 'https://github.com/nebula-codes/hytale_server_manager', label: 'GitHub', external: true },
    { href: 'https://github.com/nebula-codes/hytale_server_manager/issues', label: 'Issues', external: true },
    { href: 'https://github.com/nebula-codes/hytale_server_manager/discussions', label: 'Discussions', external: true },
  ],
};
---

<footer class="bg-primary-light-bg-secondary dark:bg-primary-bg-secondary border-t border-gray-200 dark:border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/hytale_server_manager/" class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-lg bg-accent-primary/10 flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-6 h-6 text-accent-primary"
            >
              <rect x="2" y="6" width="20" height="12" rx="2"></rect>
              <path d="M12 12h.01"></path>
              <path d="M17 12h.01"></path>
              <path d="M7 12h.01"></path>
            </svg>
          </div>
          <span class="font-heading font-bold text-xl">
            <span class="text-gradient">Hytale</span>
            <span class="text-text-light-primary dark:text-text-primary">Panel</span>
          </span>
        </a>
        <p class="text-sm text-text-light-muted dark:text-text-muted mb-4">
          Self-hosted server management for Hytale. Monitor, manage, and scale your servers with ease.
        </p>
      </div>

      <!-- Product -->
      <div>
        <h4 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-4">
          Product
        </h4>
        <ul class="space-y-2">
          {
            links.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                  class="text-sm text-text-light-muted dark:text-text-muted hover:text-accent-primary transition-colors"
                >
                  {link.label}
                  {link.external && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="inline w-3 h-3 ml-1"
                    >
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" x2="21" y1="14" y2="3" />
                    </svg>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Documentation -->
      <div>
        <h4 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-4">
          Documentation
        </h4>
        <ul class="space-y-2">
          {
            links.docs.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-text-light-muted dark:text-text-muted hover:text-accent-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Community -->
      <div>
        <h4 class="font-heading font-semibold text-text-light-primary dark:text-text-primary mb-4">
          Community
        </h4>
        <ul class="space-y-2">
          {
            links.community.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                  class="text-sm text-text-light-muted dark:text-text-muted hover:text-accent-primary transition-colors"
                >
                  {link.label}
                  {link.external && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="inline w-3 h-3 ml-1"
                    >
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" x2="21" y1="14" y2="3" />
                    </svg>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-text-light-muted dark:text-text-muted">
        &copy; {currentYear} HytalePanel. All rights reserved.
      </p>
      <p class="text-sm text-text-light-muted dark:text-text-muted">
        Made with
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="inline w-4 h-4 text-danger mx-1"
        >
          <path
            d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z"
          ></path>
        </svg>
        for the Hytale community
      </p>
    </div>
  </div>
</footer>
