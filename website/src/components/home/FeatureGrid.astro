---
import FeatureCard from '../ui/FeatureCard.astro';

const features = [
  {
    icon: 'activity',
    title: 'Real-time Monitoring',
    description: 'Live server metrics via WebSocket. Track CPU, memory, TPS, and player counts in real-time with auto-refreshing dashboards.',
    href: '/hytale_server_manager/docs/features/server-management',
  },
  {
    icon: 'network',
    title: 'Network Organization',
    description: 'Group multiple servers into networks for easier management. Control and monitor entire clusters from a single view.',
    href: '/hytale_server_manager/docs/features/server-management',
  },
  {
    icon: 'package',
    title: 'Mod Marketplace',
    description: 'Browse and install mods directly from Modtale. One-click installation with automatic dependency handling.',
    href: '/hytale_server_manager/docs/features/mod-marketplace',
  },
  {
    icon: 'database',
    title: 'Automated Backups',
    description: 'Schedule automatic backups with cron expressions. One-click restore to any previous state with full data integrity.',
    href: '/hytale_server_manager/docs/features/backups',
  },
  {
    icon: 'clock',
    title: 'Task Automation',
    description: 'Automate restarts, backups, commands, and more with flexible cron scheduling. Set it and forget it.',
    href: '/hytale_server_manager/docs/features/automation',
  },
  {
    icon: 'terminal',
    title: 'Live Console',
    description: 'Execute commands in real-time with a fully-featured web console. Color-coded logs and downloadable history.',
    href: '/hytale_server_manager/docs/features/server-management',
  },
];
---

<section class="section-padding bg-primary-light-bg dark:bg-primary-bg">
  <div class="max-w-7xl mx-auto container-padding">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl font-heading font-bold text-text-light-primary dark:text-text-primary mb-4">
        Everything You Need to
        <span class="text-gradient">Manage Servers</span>
      </h2>
      <p class="text-lg text-text-light-muted dark:text-text-muted">
        A comprehensive suite of tools designed for Hytale server administrators.
        From monitoring to modding, we've got you covered.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <FeatureCard
          icon={feature.icon}
          title={feature.title}
          description={feature.description}
          href={feature.href}
        />
      ))}
    </div>
  </div>
</section>
